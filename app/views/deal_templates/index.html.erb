<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All deals
    </h1>

    <a href="/deals/new" class="btn btn-block btn-outline-secondary">
      Add a new deal
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "deal_templates/deals_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Bar
        </th>

        <th>
          Day of week
        </th>

        <th>
          Deal level
        </th>

        <th>
          Description
        </th>

        <th>
          Start time
        </th>

        <th>
          End time
        </th>

        <th>
          Deal tagline
        </th>

        <th>
          Rating
        </th>

        <th>
          Verification status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @deals.each do |deal| %>
      <tr>
        <td>
          <%= deal.id %>
        </td>

        <td>
          <% if deal.bar.present? %>
            <a href="/bars/<%= deal.bar.id %>">
              <%= deal.bar.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= deal.day_of_week %>
        </td>

        <td>
          <%= deal.deal_level %>
        </td>

        <td>
          <%= deal.description %>
        </td>

        <td>
          <%= deal.start_time %>
        </td>

        <td>
          <%= deal.end_time %>
        </td>

        <td>
          <%= deal.deal_tagline %>
        </td>

        <td>
          <%= deal.rating %>
        </td>

        <td>
          <%= deal.verification_status %>
        </td>

        <td>
          <%= time_ago_in_words(deal.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(deal.updated_at) %> ago
        </td>

        <td>
          <a href="/deals/<%= deal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @deals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
