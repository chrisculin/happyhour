<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All deals
    </h1>

    <a href="/deals/new" class="btn btn-block btn-outline-secondary">
      Add a new deal
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Bar
        </th>

        <th>
          Day of week
        </th>

        <th>
          Deal level
        </th>

        <th>
          Description
        </th>

        <th>
          Start time
        </th>

        <th>
          End time
        </th>

        <th>
          Deal tagline
        </th>

        <th>
          Rating
        </th>

        <th>
          Verification status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @deals.each do |deal| %>
      <tr>
        <!-- Display deal.id start -->
        <td>
          <%= deal.id %>
        </td>
        <!-- Display deal.id end -->

        <!-- Display deal.bar_id start -->
        <td>
          <% if deal.bar.present? %>
            <a href="/bars/<%= deal.bar.id %>">
              <%= deal.bar.name %>
            </a>
          <% end %>
        </td>
        <!-- Display deal.bar_id end -->

        <!-- Display deal.day_of_week start -->
        <td>
          <%= deal.day_of_week %>
        </td>
        <!-- Display deal.day_of_week end -->

        <!-- Display deal.deal_level start -->
        <td>
          <%= deal.deal_level %>
        </td>
        <!-- Display deal.deal_level end -->

        <!-- Display deal.description start -->
        <td>
          <%= deal.description %>
        </td>
        <!-- Display deal.description end -->

        <!-- Display deal.start_time start -->
        <td>
          <%= deal.start_time %>
        </td>
        <!-- Display deal.start_time end -->

        <!-- Display deal.end_time start -->
        <td>
          <%= deal.end_time %>
        </td>
        <!-- Display deal.end_time end -->

        <!-- Display deal.deal_tagline start -->
        <td>
          <%= deal.deal_tagline %>
        </td>
        <!-- Display deal.deal_tagline end -->

        <!-- Display deal.rating start -->
        <td>
          <%= deal.rating %>
        </td>
        <!-- Display deal.rating end -->

        <!-- Display deal.verification_status start -->
        <td>
          <%= deal.verification_status %>
        </td>
        <!-- Display deal.verification_status end -->

        <!-- Display deal.created_at start -->
        <td>
          <%= time_ago_in_words(deal.created_at) %> ago
        </td>
        <!-- Display deal.created_at end -->

        <!-- Display deal.updated_at start -->
        <td>
          <%= time_ago_in_words(deal.updated_at) %> ago
        </td>
        <!-- Display deal.updated_at end -->

        <td>
          <a href="/deals/<%= deal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @deals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
