<% if @deal.errors.any? %>
  <% @deal.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit deal #<%= @deal.id %>
</h1>

<hr>

<form action="/update_deal/<%= @deal.id %>" method="post">

  <div class="form-group">
    <label for="bar_id">
      Bar
    </label>

    <%= select_tag(:bar_id, options_from_collection_for_select(Bar.all, :id, :name, @deal.bar_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="day_of_week">
      Day of week
    </label>

    <input type="text" id="day_of_week" name="day_of_week" class="form-control" value="<%= @deal.day_of_week %>">
  </div>

  <div class="form-group">
    <label for="deal_level">
      Deal level
    </label>

    <input type="text" id="deal_level" name="deal_level" class="form-control" value="<%= @deal.deal_level %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @deal.description %>">
  </div>

  <div class="form-group">
    <label for="start_time">
      Start time
    </label>

    <input type="text" id="start_time" name="start_time" class="form-control" value="<%= @deal.start_time %>">
  </div>

  <div class="form-group">
    <label for="end_time">
      End time
    </label>

    <input type="text" id="end_time" name="end_time" class="form-control" value="<%= @deal.end_time %>">
  </div>

  <div class="form-group">
    <label for="deal_tagline">
      Deal tagline
    </label>

    <input type="text" id="deal_tagline" name="deal_tagline" class="form-control" value="<%= @deal.deal_tagline %>">
  </div>

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @deal.rating %>">
  </div>

  <div class="form-group">
    <label for="verification_status">
      Verification status
    </label>

    <input type="text" id="verification_status" name="verification_status" class="form-control" value="<%= @deal.verification_status %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update deal
  </button>
</form>

<hr>

<a href="/deals">
  Go back
</a>
