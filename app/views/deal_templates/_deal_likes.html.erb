<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#deal_likes_new_form">
      Add favorite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @deal.likes.each do |favorite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/favorites/<%= favorite.id %>">
          <%= favorite.deal_id %>
        </a>

        <%if current_user == favorite.user %>
          <a href="/delete_favorite_from_deal/<%= favorite.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="deal_likes_new_form">
        <%= render partial: "deal_templates/deal_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
