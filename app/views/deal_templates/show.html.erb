<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Deal #<%= @deal.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/deals" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/deals/<%= @deal.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit deal
        </a>
      </div>

      <div class="col">
        <a href="/delete_deal/<%= @deal.id %>" class="btn btn-block btn-outline-secondary">
          Delete deal
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Bar
      </dt>
      <dd>
        <% if @deal.bar.present? %>
          <a href="/bars/<%= @deal.bar_id %>">
            <%= @deal.bar.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Day of week
      </dt>
      <dd>
        <%= @deal.day_of_week %>
      </dd>

      <dt>
        Deal level
      </dt>
      <dd>
        <%= @deal.deal_level %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @deal.description %>
      </dd>

      <dt>
        Start time
      </dt>
      <dd>
        <%= @deal.start_time %>
      </dd>

      <dt>
        End time
      </dt>
      <dd>
        <%= @deal.end_time %>
      </dd>

      <dt>
        Deal tagline
      </dt>
      <dd>
        <%= @deal.deal_tagline %>
      </dd>

      <dt>
        Rating
      </dt>
      <dd>
        <%= @deal.rating %>
      </dd>

      <dt>
        Verification status
      </dt>
      <dd>
        <%= @deal.verification_status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@deal.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@deal.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "deal_templates/deal_likes" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "deal_templates/deal_comments" %>
  </div>
</div>
