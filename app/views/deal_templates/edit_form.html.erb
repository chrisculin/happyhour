<h1>
  Edit deal #<%= @deal.id %>
</h1>

<hr>

<!-- Form deal start -->
<form action="/update_deal/<%= @deal.id %>" method="post">
<!-- Form deal end -->

  <!-- Label and input for bar_id start -->
  <div class="form-group">
    <label for="bar_id">
      Bar
    </label>

    <!-- Input for bar_id start -->
    <%= select_tag(:bar_id, options_from_collection_for_select(Bar.all, :id, :name, @deal.bar_id), :class => "form-control") %>
    <!-- Input for bar_id end -->
  </div>
  <!-- Label and input for bar_id end -->

  <!-- Label and input for day_of_week start -->
  <div class="form-group">
    <label for="day_of_week">
      Day of week
    </label>

    <!-- Input for day_of_week start -->
    <input type="text" id="day_of_week" name="day_of_week" class="form-control" value="<%= @deal.day_of_week %>">
    <!-- Input for day_of_week end -->
  </div>
  <!-- Label and input for day_of_week end -->

  <!-- Label and input for deal_level start -->
  <div class="form-group">
    <label for="deal_level">
      Deal level
    </label>

    <!-- Input for deal_level start -->
    <input type="text" id="deal_level" name="deal_level" class="form-control" value="<%= @deal.deal_level %>">
    <!-- Input for deal_level end -->
  </div>
  <!-- Label and input for deal_level end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @deal.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for start_time start -->
  <div class="form-group">
    <label for="start_time">
      Start time
    </label>

    <!-- Input for start_time start -->
    <input type="text" id="start_time" name="start_time" class="form-control" value="<%= @deal.start_time %>">
    <!-- Input for start_time end -->
  </div>
  <!-- Label and input for start_time end -->

  <!-- Label and input for end_time start -->
  <div class="form-group">
    <label for="end_time">
      End time
    </label>

    <!-- Input for end_time start -->
    <input type="text" id="end_time" name="end_time" class="form-control" value="<%= @deal.end_time %>">
    <!-- Input for end_time end -->
  </div>
  <!-- Label and input for end_time end -->

  <!-- Label and input for deal_tagline start -->
  <div class="form-group">
    <label for="deal_tagline">
      Deal tagline
    </label>

    <!-- Input for deal_tagline start -->
    <input type="text" id="deal_tagline" name="deal_tagline" class="form-control" value="<%= @deal.deal_tagline %>">
    <!-- Input for deal_tagline end -->
  </div>
  <!-- Label and input for deal_tagline end -->

  <!-- Label and input for rating start -->
  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <!-- Input for rating start -->
    <input type="text" id="rating" name="rating" class="form-control" value="<%= @deal.rating %>">
    <!-- Input for rating end -->
  </div>
  <!-- Label and input for rating end -->

  <!-- Label and input for verification_status start -->
  <div class="form-group">
    <label for="verification_status">
      Verification status
    </label>

    <!-- Input for verification_status start -->
    <input type="text" id="verification_status" name="verification_status" class="form-control" value="<%= @deal.verification_status %>">
    <!-- Input for verification_status end -->
  </div>
  <!-- Label and input for verification_status end -->

  <button class="btn btn-block btn-outline-secondary">
    Update deal
  </button>
</form>

<hr>

<a href="/deals">
  Go back
</a>
