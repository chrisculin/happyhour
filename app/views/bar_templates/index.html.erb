<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bars
    </h1>

    <a href="/bars/new" class="btn btn-block btn-outline-secondary">
      Add a new bar
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "bar_templates/bars_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "bar_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Address
        </th>

        <th>
          Name
        </th>

        <th>
          Yelp link
        </th>

        <th>
          Phone number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bars.each do |bar| %>
      <tr>
        <td>
          <%= bar.id %>
        </td>

        <td>
          <%= bar.address %>
        </td>

        <td>
          <%= bar.name %>
        </td>

        <td>
          <%= bar.yelp_link %>
        </td>

        <td>
          <%= bar.phone_number %>
        </td>

        <td>
          <%= time_ago_in_words(bar.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(bar.updated_at) %> ago
        </td>

        <td>
          <a href="/bars/<%= bar.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @bars, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
