<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bars
    </h1>

    <a href="/bars/new" class="btn btn-block btn-outline-secondary">
      Add a new bar
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "bar_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Address
        </th>

        <th>
          Name
        </th>

        <th>
          Yelp link
        </th>

        <th>
          Phone number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bars.each do |bar| %>
      <tr>
        <!-- Display bar.id start -->
        <td>
          <%= bar.id %>
        </td>
        <!-- Display bar.id end -->

        <!-- Display bar.address start -->
        <td>
          <%= bar.address %>
        </td>
        <!-- Display bar.address end -->

        <!-- Display bar.name start -->
        <td>
          <%= bar.name %>
        </td>
        <!-- Display bar.name end -->

        <!-- Display bar.yelp_link start -->
        <td>
          <%= bar.yelp_link %>
        </td>
        <!-- Display bar.yelp_link end -->

        <!-- Display bar.phone_number start -->
        <td>
          <%= bar.phone_number %>
        </td>
        <!-- Display bar.phone_number end -->

        <!-- Display bar.created_at start -->
        <td>
          <%= time_ago_in_words(bar.created_at) %> ago
        </td>
        <!-- Display bar.created_at end -->

        <!-- Display bar.updated_at start -->
        <td>
          <%= time_ago_in_words(bar.updated_at) %> ago
        </td>
        <!-- Display bar.updated_at end -->

        <td>
          <a href="/bars/<%= bar.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @bars, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
