<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Deals

    <a data-toggle="collapse" href="#bar_deals_new_form">
      Add deal
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @bar.deals.each do |deal| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/deals/<%= deal.id %>">
          <%= deal.deal_tagline %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_deal_from_bar/<%= deal.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="bar_deals_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
